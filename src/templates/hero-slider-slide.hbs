{{#each service}}
    <div class="hero-slider__slide {{#if @first}}left active{{/if}}">
        <article class="hero-slider__article {{class}}">
            <ul class="hero-slider__service-list">
                {{#each service-item}}
                    <li class="hero-slider__service-listItem">
                        <a href="{{href}}" class="hero-slider__link">
                            <div class="hero-slider__image" style="background-image: url('{{image}}');"></div>
                            <div class="hero-slider__text-wrapper">
                                <h4 class="hero-slider__text-title">{{title}}</h4>
                                <p class="hero-slider__text">{{description}}</p>
                            </div>
                        </a>
                    </li>
                {{/each}}
            </ul>
        </article>
    </div>
{{/each}}
<div class="hero-slider__controls controls" aria-controls="slider" data-controls="slider">
    <a class="hero-slider__controls-button" data-slide id="slider_left" role="button" aria-pressed="false" data-mouse>
        <i class="icon material-icons">chevron_left</i>
    </a>
    <a class="hero-slider__controls-button" data-slide id="slider_right" role="button" aria-pressed="false" data-mouse>
        <i class="icon material-icons">chevron_right</i>
    </a>
</div>