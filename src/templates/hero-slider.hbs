<div id="hero_slider">
    <section class="container present">

        {{#each services-new}}
            <div class="hero-slider__head">
                <h2 class="block-title">
                    <p>02</p>
                    <span>{{title}}</span>
                </h2>
                <ul class="hero-slider__list">
                    {{#each tabs}}
                        <li class="hero-slider__listItem" style="position: relative;">
                            <a class="hero-slider__service-link{{#if @first}} active{{/if}}" href=""
                                data-slide="{{@index}}">{{tab-item}}</a>
                        </li>
                    {{/each}}
                </ul>
            </div>

            <div class="hero-slider" role="slider" aria-labelledby="hero-header" id="slider">
                <div class="hero-slider__controls-aside">
                    <a class="hero-slider__controls-button aside" data-slide id="slider_left0" role="button"
                        aria-pressed="false">
                        <i class="icon material-icons">chevron_left</i>
                    </a>
                </div>

                <div class="hero-slider__content">
                    {{#each tabs}}
                        {{#if @first}}
                            {{> ./hero-slider-slide}}
                        {{/if}}
                    {{/each}}
                </div>
                <div class="hero-slider__controls-aside">
                    <a class="hero-slider__controls-button aside" data-slide id="slider_right0" role="button"
                        aria-pressed="false">
                        <i class="icon material-icons">chevron_right</i>
                    </a>
                </div>
                <div class="hero-slider__indicators"></div>
            </div>
        {{/each}}
    </section>
</div>